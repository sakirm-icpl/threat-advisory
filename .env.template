# VersionIntel Environment Configuration Template
# ==============================================
# Copy this file to .env and configure your settings

# Server Configuration
SERVER_HOST=localhost
# For production: Change to your server IP or domain
# SERVER_HOST=172.17.14.65

# Database Configuration
POSTGRES_USER=versionintel
POSTGRES_PASSWORD=change_this_secure_password
POSTGRES_DB=versionintel

# Flask Security Configuration (CHANGE THESE!)
SECRET_KEY=change_this_to_random_secret_key_min_32_chars
JWT_SECRET_KEY=change_this_to_random_jwt_secret_key_min_32_chars

# GitHub OAuth Configuration (REQUIRED)
# Set up at: https://github.com/settings/developers
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Google AI Configuration (Optional)
AI_PROVIDER=gemini
GOOGLE_API_KEY=your_google_api_key
GOOGLE_MODEL=gemini-2.0-flash

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Application Settings
FLASK_ENV=production
FLASK_DEBUG=0