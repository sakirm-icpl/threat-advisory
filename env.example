# VersionIntel Environment Variables Example
# Copy this file to .env and modify as needed

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=versionintel

# Security Keys  
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here

# Server Configuration
SERVER_HOST=localhost

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Application Settings
FLASK_ENV=development
FLASK_DEBUG=1

# GitHub OAuth Configuration
# Get these from: https://github.com/settings/developers
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_REDIRECT_URI=http://localhost:3000/auth/github/callback

# Database Host Configuration (for Docker networking)
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Port Configuration
BACKEND_PORT=8000
FRONTEND_PORT=3000

# NVD API Configuration (Optional - for higher rate limits)
# Get your free API key from: https://nvd.nist.gov/developers/request-an-api-key
NVD_API_KEY=

# Google AI Configuration
AI_PROVIDER=gemini
GOOGLE_API_KEY=your-google-api-key
GOOGLE_MODEL=gemini-1.5-flash

# Email Configuration (for sending invitations)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=your-email@gmail.com
FROM_NAME=VersionIntel
FRONTEND_URL=http://localhost:3000